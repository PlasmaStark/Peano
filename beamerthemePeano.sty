\ProvidesPackage{beamerthemePeano}[2025/08/06 Peano theme for Beamer]

% ======================
% FONT THEME (Palatino)
% ======================
\RequirePackage{palatino} 
\RequirePackage{mathpazo}

\renewcommand{\familydefault}{\rmdefault}
\setbeamerfont{title}{series=\bfseries,size=\LARGE}
\setbeamerfont{frametitle}{series=\bfseries,size=\Large}
\setbeamerfont{framesubtitle}{series=\mdseries,size=\normalsize}
\setbeamerfont{section in toc}{series=\bfseries}
\setbeamerfont{author}{series=\mdseries,size=\normalsize}
\setbeamerfont{institute}{series=\mdseries,size=\small}
\setbeamerfont{date}{series=\mdseries,size=\small}
\setbeamerfont{normal text}{series=\mdseries,size=\normalsize}
\setbeamerfont{alerted text}{series=\bfseries}
\setbeamerfont{verbatim}{family=\ttfamily,size=\small}

% ======================
% COLOR THEME
% ======================
\RequirePackage{xcolor}
\RequirePackage{graphicx}

\definecolor{polito}{HTML}{001e3c}
\definecolor{polito-light}{HTML}{e3f0ff}

\definecolor{polito-green}{HTML}{005348}
\definecolor{polito-orange}{HTML}{dea01e}
\definecolor{polito-red}{HTML}{782e13}

\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{structure}{fg=polito}
\setbeamercolor{block}{bg=polito}
\setbeamercolor{titlelike}{fg=polito}
\setbeamercolor{framesubtitle}{fg=black}
\setbeamercolor{subtitle}{fg=black}
\setbeamercolor{alerted text}{fg=polito-red}
\setbeamercolor{example text}{fg=polito-green}
\setbeamercolor{palette primary}{fg=white, bg=polito}
\setbeamercolor{palette secondary}{fg=white, bg=polito}
\setbeamercolor{palette tertiary}{fg=white, bg=polito}
\setbeamercolor{palette quaternary}{fg=white, bg=polito}

% ======================
% INNER & OUTER THEME
% ======================
\useinnertheme{default}
\useoutertheme{infolines}

% ======================
% MARGINI
% ======================
\mode<presentation>
\setbeamersize{text margin left=1em,text margin right=1em}
\mode<all>

% ======================
% LOGO (modifica se serve)
% ======================
\logo{\includegraphics[height=1cm]{images/polito_logo_primary.png}}

% ======================
% FOOTLINE PERSONALIZZATO
% ======================
\setbeamertemplate{footline}{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.3\paperwidth,ht=2.5ex,dp=1.125ex,left]{author in head/foot}%
    \usebeamerfont{author in head/foot}\insertshortauthor
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.4\paperwidth,ht=2.5ex,dp=1.125ex,center]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.3\paperwidth,ht=2.5ex,dp=1.125ex,right]{date in head/foot}%
    \usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
  \end{beamercolorbox}}%
  \vskip0pt%
}

% ======================
% HEADER SEZIONE (opzionale)
% ======================
\setbeamertemplate{headline}{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1ex,center]{section in head/foot}%
      \usebeamerfont{section in head/foot}\insertsectionhead
    \end{beamercolorbox}
  }%
}

